---
import Layout from "../../layouts/Layout.astro";
import CreatePost from "../post/create/index.astro";
import List from "./list.astro";
---

<Layout title="posts">
    <main
        class="container mx-auto flex flex-col items-center h-screen overflow-hidden w-1/2 gap-2 px-2 border-x border-indigo-900"
    >
        <h1 class="font-bold text-4xl text-purple-200 self-start">Posts</h1>
        <CreatePost />
        <h2 class="font-bold text-2xl text-purple-200 self-start">
            Some Posts
        </h2>
        <List />
    </main>
</Layout>
